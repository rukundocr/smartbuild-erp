<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-white mb-1">Invoice Registry</h2>
        <p class="text-info small fw-bold mb-0">Currency: RWF | VAT: 18%</p>
    </div>
    <a href="/invoices/new" class="btn btn-danger fw-bold shadow">
        <i class="fas fa-plus-circle me-2"></i>CREATE INVOICE
    </a>
</div>

<div class="card border-secondary bg-dark bg-opacity-50 shadow">
    <div class="table-responsive">
        <table class="table table-dark table-hover mb-0">
            <thead>
                <tr class="text-secondary small border-bottom border-secondary">
                    <th class="py-3 px-4">INV #</th>
                    <th class="py-3">PROJECT SITE</th>
                    <th class="py-3">CLIENT</th>
                    <th class="py-3">TOTAL (INC. VAT)</th>
                    <th class="py-3">DATE</th>
                    <th class="py-3 text-end px-4">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                {{#each invoices}}
                <tr class="align-middle border-bottom border-secondary">
                    <td class="px-4 font-monospace text-info">{{this.invoiceNumber}}</td>
                    <td>
                        <div class="text-white fw-bold">{{this.projectId.projectName}}</div>
                        <div class="text-secondary small">{{this.siteLocation}}</div>
                    </td>
                    <td>{{this.clientName}}</td>
                    <td class="fw-bold text-success">{{formatCurrency this.grandTotal}}</td>
                    <td class="small text-secondary">{{formatDate this.date}}</td>
                    <td class="text-end px-4">
                        <a href="/invoices/pdf/{{this._id}}" class="btn btn-sm btn-outline-info border-0 me-1">
                            <i class="fas fa-file-pdf"></i>
                        </a>
                        <a href="/invoices/edit/{{this._id}}" class="btn btn-sm btn-outline-warning border-0 me-1">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form action="/invoices/delete/{{this._id}}" method="POST" class="d-inline" onsubmit="return confirm('Delete this invoice?')">
                            <button type="submit" class="btn btn-sm btn-outline-danger border-0">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                {{else}}
                <tr><td colspan="6" class="text-center py-5 text-secondary">No invoices found.</td></tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>