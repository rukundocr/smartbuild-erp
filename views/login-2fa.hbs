<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card bg-dark border-secondary p-4 shadow-lg text-center">
                <i class="fas fa-shield-alt text-primary fa-3x mb-3"></i>
                <h4 class="text-white fw-bold">Two-Step Verification</h4>
                <p class="text-secondary small">Enter the 6-digit code from your Authenticator app to access SmartBuild.</p>

                {{#if error_msg}}
                    <div class="alert alert-danger bg-danger border-0 text-white small py-2">{{error_msg}}</div>
                {{/if}}

                <form action="/auth/login-2fa" method="POST">
                    <div class="mb-4">
                        <input type="text" name="token" 
                               class="form-control form-control-lg text-center fw-bold" 
                               placeholder="000 000" 
                               maxlength="6" 
                               pattern="\d*" 
                               inputmode="numeric" 
                               style="letter-spacing: 10px; font-size: 1.5rem;"
                               required autofocus>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 fw-bold py-2">VERIFY & LOGIN</button>
                </form>
                
                <a href="/auth/login" class="btn btn-link text-secondary small mt-3 text-decoration-none">Back to Login</a>
            </div>
        </div>
    </div>
</div>