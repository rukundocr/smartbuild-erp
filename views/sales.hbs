<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
    <div>
        <h2 class="fw-bold text-white mb-1">RRA Sales Imports</h2>
        <p class="text-secondary mb-0">Total VAT Output: <span class="text-info fw-bold">{{formatCurrency totals.vat}}</span></p>
    </div>
    <div class="d-flex gap-2">
        {{!-- Updated Export Link to include Project Filter --}}
        <a href="/rra-sales/export?startDate={{startDate}}&endDate={{endDate}}&buyerTIN={{buyerTIN}}&projectId={{projectId}}" class="btn btn-outline-light btn-sm fw-bold shadow-sm">
            <i class="fas fa-file-csv me-1"></i> EXPORT CSV
        </a>
        <button class="btn btn-primary btn-sm fw-bold shadow-sm" data-bs-toggle="modal" data-bs-target="#uploadModal">
            <i class="fas fa-file-import me-1"></i> UPLOAD RRA CSV
        </button>
    </div>
</div>

{{!-- Filter Section --}}
<div class="card p-3 border-secondary bg-dark mb-4 shadow-sm">
    <div class="row g-2 align-items-end">
        <div class="col-12 col-md-10">
            <form action="/rra-sales" method="GET" class="row g-2 align-items-end">
                <div class="col-6 col-md-2">
                    <label class="small text-secondary mb-1">From Date</label>
                    <input type="date" name="startDate" class="form-control bg-black border-secondary text-white" value="{{startDate}}">
                </div>
                <div class="col-6 col-md-2">
                    <label class="small text-secondary mb-1">To Date</label>
                    <input type="date" name="endDate" class="form-control bg-black border-secondary text-white" value="{{endDate}}">
                </div>
                <div class="col-12 col-md-2">
                    <label class="small text-secondary mb-1">Buyer TIN</label>
                    <input type="text" name="buyerTIN" class="form-control bg-black border-secondary text-white" placeholder="Search TIN..." value="{{buyerTIN}}">
                </div>
                {{!-- Added: Project Filter --}}
                <div class="col-12 col-md-3">
                    <label class="small text-secondary mb-1">Project</label>
                    <select name="projectId" class="form-select bg-black border-secondary text-white">
                        <option value="">All Projects</option>
                        {{#each projects}}
                            <option value="{{this._id}}" {{#if (eq ../projectId (toString this._id))}}selected{{/if}}>
                                {{this.projectName}}
                            </option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-12 col-md-3 d-flex gap-1">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">FILTER</button>
                    <a href="/rra-sales" class="btn btn-outline-secondary w-100 fw-bold">RESET</a>
                </div>
            </form>
        </div>
        <div class="col-12 col-md-2">
            <form action="/rra-sales/delete-all" method="POST" onsubmit="return confirm('CRITICAL: Delete ALL records?')">
                <button type="submit" class="btn btn-sm btn-outline-danger fw-bold py-2 w-100">
                    <i class="fas fa-trash-alt me-1"></i> CLEAR ALL
                </button>
            </form>
        </div>
    </div>
</div>

{{!-- Summary Cards --}}
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card bg-dark border-secondary p-3 text-center shadow-sm">
            <label class="small text-secondary">NET SALES</label>
            <h4 class="text-warning fw-bold mb-0">{{formatCurrency totals.net}}</h4>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-dark border-secondary p-3 text-center shadow-sm border-info">
            <label class="small text-info">VAT OUTPUT (18%)</label>
            <h4 class="text-info fw-bold mb-0">{{formatCurrency totals.vat}}</h4>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-dark border-secondary p-3 text-center shadow-sm border-success">
            <label class="small text-secondary">TOTAL WITH VAT</label>
            <h4 class="text-success fw-bold mb-0">{{formatCurrency totals.total}}</h4>
        </div>
    </div>
</div>

{{!-- Desktop Table --}}
<div class="card border-secondary bg-dark shadow-lg d-none d-md-block">
    <div class="table-responsive">
        <table class="table table-dark table-hover mb-0">
            <thead>
                <tr class="text-secondary small border-bottom border-secondary">
                    <th class="py-3 px-3 class="text-warning"">INVOICE DATE</th>
                    <th class="text-warning">CLIENT name / TIN</th>
                    <th class="text-warning">TIN</th>
                    <th class="text-warning">RECEIPT #</th>
                    <th class="text-end text-warning">EXCL. VAT</th>
                    <th class="text-end text-warning">VAT</th>
                    <th class="text-end px-3 text-warning">PROJECT LINKING</th>
                </tr>
            </thead>
            <tbody>
                {{#each sales}}
                <tr class="align-middle border-bottom border-secondary" style="height: 85px;">
                    <td class="small text-white px-3">{{formatDate this.invoiceDate}}</td>
                   
                        <td class="fw-bold text-white">{{this.buyerName}}</td>
                        <td class="small text-white">{{this.buyerTIN}}</td>
                
                    <td class="text-info fw-bold font-monospace">{{this.receiptNumber}}</td>
                    <td class="text-end fw-bold">{{formatCurrency this.totalAmountExclVAT}}</td>
                    <td class="text-end text-info fw-bold">{{formatCurrency this.vatAmount}}</td>
                    <td class="text-end px-3">
                        <form action="/rra-sales/link/{{this._id}}" method="POST" class="d-flex justify-content-end align-items-center">
                            <select name="projectId" class="form-select form-select-sm fw-bold border-white" 
                                style="width: 180px; background-color: #ffffff !important; color: #000000 !important;">
                                <option value="">-- Select Project --</option>
                                {{#each ../projects}}
                                    <option value="{{this._id}}" {{#if (eq ../projectId._id this._id)}}selected{{/if}}>{{this.projectName}}</option>
                                {{/each}}
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary ms-1 shadow-sm"><i class="fas fa-link"></i></button>
                        </form>
                        {{#if this.projectId}}
                            <div class="x-small text-info mt-1"><i class="fas fa-check-circle me-1"></i>{{this.projectId.projectName}}</div>
                        {{/if}}
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="6" class="text-center py-5 text-secondary">No records found matching your criteria.</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{!-- Mobile Cards --}}
<div class="d-md-none">
    {{#each sales}}
    <div class="card border-secondary bg-dark mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between small mb-2">
                <span class="text-secondary">{{formatDate this.invoiceDate}}</span>
                <span class="badge bg-secondary">TIN: {{this.buyerTIN}}</span>
            </div>
            <h6 class="text-white fw-bold">{{this.buyerName}}</h6>
            <div class="d-flex justify-content-between border-top border-secondary pt-2 mt-2">
                <span class="text-info small">VAT: {{formatCurrency this.vatAmount}}</span>
                <span class="text-success fw-bold">{{formatCurrency this.totalAmountExclVAT}}</span>
            </div>
            {{#if this.projectId}}
                <div class="x-small text-info mt-1 fw-bold"><i class="fas fa-project-diagram me-1"></i>{{this.projectId.projectName}}</div>
            {{/if}}
        </div>
    </div>
    {{/each}}
</div>

{{!-- Pagination --}}
{{#if pagination.totalPages}}
<div class="d-flex justify-content-between align-items-center mt-4 mb-5">
    <span class="small text-secondary">PAGE {{pagination.currentPage}} / {{pagination.totalPages}}</span>
    <nav>
        <ul class="pagination pagination-sm mb-0">
            {{#if pagination.hasPrev}}
            <li class="page-item">
                <a class="page-link bg-dark border-secondary text-white" href="/rra-sales?page={{pagination.prevPage}}&buyerTIN={{buyerTIN}}&startDate={{startDate}}&endDate={{endDate}}&projectId={{projectId}}">Prev</a>
            </li>
            {{/if}}
            
            <li class="page-item active"><span class="page-link bg-primary border-primary">{{pagination.currentPage}}</span></li>
            
            {{#if pagination.hasNext}}
            <li class="page-item">
                <a class="page-link bg-dark border-secondary text-white" href="/rra-sales?page={{pagination.nextPage}}&buyerTIN={{buyerTIN}}&startDate={{startDate}}&endDate={{endDate}}&projectId={{projectId}}">Next</a>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>
{{/if}}

{{!-- Import Modal --}}
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark border-secondary text-white">
            <div class="modal-header border-secondary">
                <h5 class="modal-title text-primary fw-bold">Import RRA Sales (CSV)</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/rra-sales/import" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <label class="small text-secondary mb-1">Select the CSV file from RRA Portal</label>
                    <input type="file" name="rraCsv" class="form-control bg-black text-white border-secondary" accept=".csv" required>
                    <div class="mt-3 p-2 border border-secondary rounded bg-black small text-info">
                        <i class="fas fa-info-circle me-2"></i>Duplicated receipt numbers will be skipped automatically.
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">UPLOAD AND PROCESS</button>
                </div>
            </form>
        </div>
    </div>
</div>