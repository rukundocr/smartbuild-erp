<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
    <div>
        <h2 class="fw-bold text-white mb-1">Daily Expenses</h2>
        <h5 class="text-info fw-bold" id="totalDisplay">Total: {{formatCurrency totalAmount}}</h5>
    </div>
    <div class="d-flex gap-2">
        <a href="/expenses/download{{#if selectedProject}}?projectId={{selectedProject}}{{/if}}" class="btn btn-outline-light btn-sm fw-bold shadow-sm">
            <i class="fas fa-file-pdf me-1"></i> EXPORT PDF
        </a>
        <button class="btn btn-danger btn-sm fw-bold shadow-sm" data-bs-toggle="modal" data-bs-target="#expenseModal">
            <i class="fas fa-plus-circle me-1"></i> RECORD NEW EXPENSE
        </button>
    </div>
</div>

{{!-- Filter Section --}}
<div class="card p-3 border-secondary bg-dark mb-4 shadow-sm">
    <form action="/expenses" method="GET">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-4">
                <label class="small text-secondary mb-1">Project Site</label>
                <select name="projectId" class="form-select bg-black border-secondary text-white">
                    <option value="">All Projects</option>
                    {{#each projects}}
                    <option value="{{this._id}}" {{#if (eq (toString this._id) (toString ../selectedProject))}}selected{{/if}}>
                        {{this.projectName}}
                    </option>
                    {{/each}}
                </select>
            </div>
            <div class="col-6 col-md-3">
                <label class="small text-secondary mb-1">From Date</label>
                <input type="date" name="startDate" class="form-control bg-black border-secondary text-white" value="{{startDate}}">
            </div>
            <div class="col-6 col-md-3">
                <label class="small text-secondary mb-1">To Date</label>
                <input type="date" name="endDate" class="form-control bg-black border-secondary text-white" value="{{endDate}}">
            </div>
            <div class="col-12 col-md-2 d-flex gap-1">
                <button type="submit" class="btn btn-primary w-100 fw-bold">FILTER</button>
                <a href="/expenses" class="btn btn-outline-secondary w-100 fw-bold">RESET</a>
            </div>
        </div>
    </form>
</div>

{{!-- Mobile Cards --}}
<div class="d-md-none">
    {{#each expenses}}
    <div class="card border-secondary bg-dark mb-3 shadow">
        <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
                <span class="badge bg-primary">{{this.projectId.projectName}}</span>
                <span class="text-secondary small">{{formatDate this.date}}</span>
            </div>
            <h6 class="text-white fw-bold mb-1">{{this.name}}</h6>
            <p class="text-info small font-monospace mb-2">{{this.recipientPhone}}</p>
            <p class="text-muted small mb-3 border-start border-primary ps-2">{{this.reason}}</p>
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="text-danger fw-bold mb-0">{{formatCurrency this.amount}}</h5>
                <div>
                    <button class="btn btn-sm btn-outline-warning border-0" data-bs-toggle="modal" data-bs-target="#editExpense{{this._id}}">
                        <i class="fas fa-edit"></i>
                    </button>
                    <form action="/expenses/delete/{{this._id}}" method="POST" class="d-inline" onsubmit="return confirm('Delete record?')">
                        <button type="submit" class="btn btn-sm btn-outline-danger border-0">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <p class="text-center text-secondary py-4">No records found for this period.</p>
    {{/each}}
</div>

{{!-- Desktop Table --}}
<div class="card border-secondary bg-dark d-none d-md-block shadow">
    <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
        <table class="table table-dark table-hover mb-0" id="expensesTable">
            <thead class="sticky-top bg-dark">
                <tr class="text-secondary small border-bottom border-secondary">
                    <th class="py-3 px-3">DATE</th>
                    <th class="py-3">DESCRIPTION</th>
                    <th class="py-3">RECIPIENT</th> 
                    <th class="py-3">PHONE</th>     
                    <th class="py-3 text-end text-danger">AMOUNT</th>
                    <th class="py-3 text-center text-warning">PROJECT MAPPING</th> {{!-- Repositioned --}}
                    <th class="py-3 text-end px-3">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                {{#each expenses}}
                <tr class="align-middle border-bottom border-secondary" style="height: 90px;">
                    <td class="small text-secondary px-3">{{formatDate this.date}}</td>
                    <td class="small" style="max-width: 200px;">{{this.reason}} <br><span class="text-muted x-small">({{this.mode}})</span></td>
                    <td class="fw-bold">{{this.name}}</td> 
                    <td class="text-info font-monospace small">{{this.recipientPhone}}</td> 
                    <td class="text-danger fw-bold text-end">{{formatCurrency this.amount}}</td>
                    
                    {{!-- Project Mapping positioned before Actions --}}
                    <td class="text-center">
                        <form action="/expenses/link/{{this._id}}" method="POST" class="d-flex align-items-center justify-content-center">
                            <select name="projectId" class="form-select form-select-sm fw-bold border-white" 
                                style="width: 160px; background-color: #ffffff !important; color: #000000 !important;">
                                <option value="">-- Select Project --</option>
                                {{#each ../projects}}
                                    <option value="{{this._id}}" {{#if (eq (toString ../projectId._id) (toString this._id))}}selected{{/if}}>
                                        {{this.projectName}}
                                    </option>
                                {{/each}}
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary ms-1 shadow-sm">
                                <i class="fas fa-link"></i>
                            </button>
                        </form>
                        {{#if this.projectId}}
                            <div class="x-small text-info mt-1"><i class="fas fa-check-circle me-1"></i>{{this.projectId.projectName}}</div>
                        {{/if}}
                    </td>
                    
                    <td class="text-end px-3">
                        <div class="d-flex justify-content-end gap-1">
                            <button class="btn btn-sm btn-outline-warning border-0" data-bs-toggle="modal" data-bs-target="#editExpense{{this._id}}">
                                <i class="fas fa-edit"></i>
                            </button>
                            <form action="/expenses/delete/{{this._id}}" method="POST" class="d-inline" onsubmit="return confirm('Delete record?')">
                                <button type="submit" class="btn btn-sm btn-outline-danger border-0">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{!-- Pagination --}}
{{#if pagination.totalPages}}
<div class="d-flex justify-content-between align-items-center mt-4 mb-5">
    <span class="small text-secondary">PAGE {{pagination.currentPage}} / {{pagination.totalPages}}</span>
    <nav>
        <ul class="pagination pagination-sm mb-0">
            {{#if pagination.hasPrev}}
            <li class="page-item">
                <a class="page-link bg-dark border-secondary text-white" href="/expenses?page={{pagination.prevPage}}{{#if selectedProject}}&projectId={{selectedProject}}{{/if}}{{#if startDate}}&startDate={{startDate}}{{/if}}{{#if endDate}}&endDate={{endDate}}{{/if}}">Prev</a>
            </li>
            {{/if}}
            <li class="page-item active"><span class="page-link bg-primary border-primary">{{pagination.currentPage}}</span></li>
            {{#if pagination.hasNext}}
            <li class="page-item">
                <a class="page-link bg-dark border-secondary text-white" href="/expenses?page={{pagination.nextPage}}{{#if selectedProject}}&projectId={{selectedProject}}{{/if}}{{#if startDate}}&startDate={{startDate}}{{/if}}{{#if endDate}}&endDate={{endDate}}{{/if}}">Next</a>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>
{{/if}}

