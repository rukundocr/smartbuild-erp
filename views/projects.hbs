<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Project Portfolio</h2>
    <button class="btn btn-primary fw-bold" data-bs-toggle="modal" data-bs-target="#projectModal">
        <i class="fas fa-plus me-2"></i>ADD NEW PROJECT
    </button>
</div>

<div class="card p-3 border-secondary bg-dark bg-opacity-50 shadow-lg">
    <div class="table-responsive">
        <table class="table table-dark table-hover mb-0">
            <thead>
                <tr class="text-secondary small">
                    <th>PROJECT NAME</th>
                    <th>CLIENT</th>
                    <th>CONTRACT AMOUNT</th>
                    <th>STATUS</th>
                    <th class="text-end">ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                {{#each projects}}
                <tr class="align-middle">
                    <td class="fw-bold">{{this.projectName}}</td>
                    <td>{{this.clientName}}</td>
                    <td class="text-info fw-bold">{{formatCurrency this.contractAmount}}</td>
                    <td>
                        <span class="badge {{#if (eq this.status 'Active')}}bg-success{{else}}{{#if (eq this.status 'Completed')}}bg-info{{else}}bg-secondary{{/if}}{{/if}}">
                            {{this.status}}
                        </span>
                    </td>
                    <td class="text-end">
                        <button class="btn btn-sm btn-outline-warning me-2" data-bs-toggle="modal" data-bs-target="#editModal{{this._id}}">
                            <i class="fas fa-edit"></i>
                        </button>

                        <form action="/projects/delete/{{this._id}}" method="POST" class="d-inline" onsubmit="return confirm('Delete this project? All associated data will be lost.')">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </td>
                </tr>

                <div class="modal fade" id="editModal{{this._id}}" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content bg-dark border-secondary">
                            <div class="modal-header border-secondary">
                                <h5 class="modal-title">Edit Project: {{this.projectName}}</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <form action="/projects/update/{{this._id}}" method="POST">
                                <div class="modal-body text-start">
                                    <div class="mb-3">
                                        <label class="small text-secondary mb-1">Project Name</label>
                                        <input type="text" name="projectName" class="form-control" value="{{this.projectName}}" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="small text-secondary mb-1">Client Name</label>
                                        <input type="text" name="clientName" class="form-control" value="{{this.clientName}}" required>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <label class="small text-secondary mb-1">Contract Amount (RWF)</label>
                                            <input type="number" name="contractAmount" class="form-control" value="{{this.contractAmount}}" required>
                                        </div>
                                        <div class="col-6">
                                            <label class="small text-secondary mb-1">Status</label>
                                            <select name="status" class="form-select">
                                                <option value="Active" {{#if (eq this.status 'Active')}}selected{{/if}}>Active</option>
                                                <option value="On Hold" {{#if (eq this.status 'On Hold')}}selected{{/if}}>On Hold</option>
                                                <option value="Completed" {{#if (eq this.status 'Completed')}}selected{{/if}}>Completed</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer border-secondary">
                                    <button type="submit" class="btn btn-warning w-100 fw-bold">UPDATE PROJECT DETAILS</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center py-5 text-secondary">
                        <i class="fas fa-folder-open fa-3x mb-3"></i><br>
                        No projects registered yet.
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="projectModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title text-primary">New Project Entry</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/projects" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="small text-secondary mb-1">Project Name</label>
                        <input type="text" name="projectName" class="form-control" placeholder="e.g., Kigali Heights Extension" required>
                    </div>
                    <div class="mb-3">
                        <label class="small text-secondary mb-1">Client Name</label>
                        <input type="text" name="clientName" class="form-control" placeholder="e.g., RSSB" required>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <label class="small text-secondary mb-1">Contract Amount (RWF)</label>
                            <input type="number" name="contractAmount" class="form-control" required>
                        </div>
                        <div class="col-6">
                            <label class="small text-secondary mb-1">Status</label>
                            <select name="status" class="form-select">
                                <option value="Active">Active</option>
                                <option value="On Hold">On Hold</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">SAVE PROJECT</button>
                </div>
            </form>
        </div>
    </div>
</div>