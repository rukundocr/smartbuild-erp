<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
    <div>
        <h2 class="fw-bold text-white mb-1">Project Sites</h2>
        <p class="text-info small mb-0"><i class="fas fa-chart-line me-1"></i> Tracking contract value vs. actual spending</p>
    </div>
    <button class="btn btn-primary fw-bold shadow-sm" data-bs-toggle="modal" data-bs-target="#projectModal">
        <i class="fas fa-plus-circle me-1"></i> NEW PROJECT
    </button>
</div>

<div class="card bg-dark border-secondary mb-4 shadow-sm">
    <div class="card-body p-3">
        <form action="/projects" method="GET" class="row g-2">
            <div class="col-12 col-md-3">
                <select name="projectId" class="form-select bg-black text-white border-secondary" onchange="this.form.submit()">
                    <option value="">-- Quick Select Project --</option>
                    {{#each allProjectNames}}
                    <option value="{{this._id}}" {{#if (eq (toString this._id) (toString ../selectedProjectId))}}selected{{/if}}>
                        {{this.projectName}}
                    </option>
                    {{/each}}
                </select>
            </div>

            <div class="col-12 col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-black border-secondary text-secondary"><i class="fas fa-search"></i></span>
                    <input type="text" name="search" class="form-control bg-dark text-white border-secondary" placeholder="Search name..." value="{{searchQuery}}">
                </div>
            </div>

            <div class="col-6 col-md-3">
                <select name="status" class="form-select bg-dark text-white border-secondary">
                    <option value="">All Statuses</option>
                    <option value="Active" {{#if (eq selectedStatus 'Active')}}selected{{/if}}>Active</option>
                    <option value="Completed" {{#if (eq selectedStatus 'Completed')}}selected{{/if}}>Completed</option>
                    <option value="On Hold" {{#if (eq selectedStatus 'On Hold')}}selected{{/if}}>On Hold</option>
                </select>
            </div>

            <div class="col-6 col-md-2 d-flex gap-2">
                <button type="submit" class="btn btn-secondary w-100 fw-bold">FILTER</button>
                <a href="/projects" class="btn btn-outline-secondary" title="Clear All"><i class="fas fa-undo"></i></a>
            </div>
        </form>
    </div>
</div>

<div class="row g-3">
    {{#each projects}}
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card bg-dark border-secondary h-100 shadow-sm border-top-0" style="border-right: 1px solid #444; border-left: 1px solid #444; border-bottom: 4px solid var(--bs-{{this.statusColor}});">
            <div class="card-header border-secondary d-flex justify-content-between align-items-start pt-3 bg-transparent">
                <div>
                    <h5 class="fw-bold text-white mb-0">{{this.projectName}}</h5>
                    <span class="badge bg-black text-info border border-secondary mt-1">{{this.clientName}}</span>
                </div>
                <div class="dropdown">
                    <button class="btn btn-link text-secondary p-0" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark border-secondary shadow">
                        <li><button class="dropdown-item small" data-bs-toggle="modal" data-bs-target="#editProject{{this._id}}"><i class="fas fa-edit me-2 text-warning"></i>Edit Details</button></li>
                        <li><a class="dropdown-item small" href="/expenses?projectId={{this._id}}"><i class="fas fa-receipt me-2 text-info"></i>View Expenses</a></li>
                        <li><hr class="dropdown-divider border-secondary"></li>
                        <li>
                            <form action="/projects/delete/{{this._id}}" method="POST" onsubmit="return confirm('Delete this project?')">
                                <button class="dropdown-item small text-danger fw-bold"><i class="fas fa-trash me-2"></i>Delete Project</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
            
            <div class="card-body py-4">
                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-secondary small">Budget Usage</span>
                        <span class="small fw-bold {{#if this.isOverBudget}}text-danger{{else}}text-white{{/if}}">{{this.percentUsed}}%</span>
                    </div>
                    <div class="progress bg-black border border-secondary" style="height: 10px;">
                        <div class="progress-bar bg-{{this.statusColor}} shadow-sm" role="progressbar" style="width: {{this.percentUsed}}%;"></div>
                    </div>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-6">
                        <label class="x-small text-secondary text-uppercase d-block">Contract Value</label>
                        <span class="fw-bold text-white">{{formatCurrency this.contractAmount}}</span>
                    </div>
                    <div class="col-6 text-end">
                        <label class="x-small text-secondary text-uppercase d-block">Total Spent</label>
                        <span class="fw-bold text-danger">{{formatCurrency this.totalSpent}}</span>
                    </div>
                </div>

                <div class="bg-black p-2 rounded border border-secondary text-center">
                    <label class="x-small text-secondary text-uppercase d-block">Remaining Balance</label>
                    <h4 class="fw-bold mb-0 text-{{this.statusColor}}">{{formatCurrency this.remainingBalance}}</h4>
                </div>
            </div>

            <div class="card-footer border-secondary bg-transparent d-flex justify-content-between align-items-center small py-3">
                <span class="text-secondary"><i class="fas fa-calendar-alt me-1"></i> {{formatDate this.startDate}}</span>
                <span class="badge {{#if (eq this.status 'Active')}}bg-success{{else}}bg-secondary{{/if}}">{{this.status}}</span>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editProject{{this._id}}" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark border-secondary text-white">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title fw-bold text-warning">Update Project Site</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/projects/update/{{this._id}}" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="small text-secondary mb-1">Project Name</label>
                            <input type="text" name="projectName" class="form-control bg-dark text-white border-secondary" value="{{this.projectName}}" required>
                        </div>
                        <div class="mb-3">
                            <label class="small text-secondary mb-1">Client Name</label>
                            <input type="text" name="clientName" class="form-control bg-dark text-white border-secondary" value="{{this.clientName}}" required>
                        </div>
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <label class="small text-secondary mb-1">Contract Amount (RWF)</label>
                                <input type="number" name="contractAmount" class="form-control bg-dark text-white border-secondary" value="{{this.contractAmount}}" required>
                            </div>
                            <div class="col-6">
                                <label class="small text-secondary mb-1">Status</label>
                                <select name="status" class="form-select bg-dark text-white border-secondary">
                                    <option value="Active" {{#if (eq this.status 'Active')}}selected{{/if}}>Active</option>
                                    <option value="Completed" {{#if (eq this.status 'Completed')}}selected{{/if}}>Completed</option>
                                    <option value="On Hold" {{#if (eq this.status 'On Hold')}}selected{{/if}}>On Hold</option>
                                </select>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="col-6">
                                <label class="small text-secondary mb-1">Start Date</label>
                                <input type="date" name="startDate" class="form-control bg-dark text-white border-secondary" value="{{formatDateHTML this.startDate}}">
                            </div>
                            <div class="col-6">
                                <label class="small text-secondary mb-1">Deadline</label>
                                <input type="date" name="deadline" class="form-control bg-dark text-white border-secondary" value="{{formatDateHTML this.deadline}}">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="submit" class="btn btn-warning w-100 fw-bold">UPDATE PROJECT</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="col-12 text-center py-5">
        <h5 class="text-secondary">No project sites found.</h5>
    </div>
    {{/each}}
</div>

{{!-- Summary --}}
{{#if projects.length}}
<div class="mt-5 mb-5 p-3 bg-black border border-secondary rounded">
    <div class="row align-items-center">
        <div class="col-12 col-md-3">
            <h6 class="text-secondary small text-uppercase mb-1">Filter Results</h6>
            <h5 class="text-white fw-bold mb-0">{{projects.length}} Projects Shown</h5>
        </div>
        <div class="col-6 col-md-3 border-start border-secondary">
            <label class="x-small text-secondary text-uppercase d-block">Contract Total</label>
            <span class="fw-bold text-white">{{formatCurrency companyTotals.contract}}</span>
        </div>
        <div class="col-6 col-md-3 border-start border-secondary">
            <label class="x-small text-secondary text-uppercase d-block">Spent Total</label>
            <span class="fw-bold text-danger">{{formatCurrency companyTotals.spent}}</span>
        </div>
        <div class="col-12 col-md-3 border-start border-secondary">
            <label class="x-small text-secondary text-uppercase d-block">Net Balance</label>
            <h4 class="fw-bold text-{{companyTotals.healthColor}} mb-0">{{formatCurrency companyTotals.balance}}</h4>
        </div>
    </div>
</div>
{{/if}}

{{!-- New Project Modal --}}
<div class="modal fade" id="projectModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark border-secondary text-white shadow-lg">
            <div class="modal-header border-secondary">
                <h5 class="modal-title fw-bold">Open New Project Site</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/projects" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="small text-secondary mb-1">Project Name</label>
                        <input type="text" name="projectName" class="form-control bg-dark text-white border-secondary" required>
                    </div>
                    <div class="mb-3">
                        <label class="small text-secondary mb-1">Client Name</label>
                        <input type="text" name="clientName" class="form-control bg-dark text-white border-secondary" required>
                    </div>
                    <div class="mb-3">
                        <label class="small text-secondary mb-1">Contract Amount (RWF)</label>
                        <input type="number" name="contractAmount" class="form-control bg-dark text-white border-secondary" required>
                    </div>
                    <div class="row g-2">
                        <div class="col-6">
                            <label class="small text-secondary mb-1">Start Date</label>
                            <input type="date" name="startDate" class="form-control bg-dark text-white border-secondary" required>
                        </div>
                        <div class="col-6">
                            <label class="small text-secondary mb-1">Deadline</label>
                            <input type="date" name="deadline" class="form-control bg-dark text-white border-secondary" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="submit" class="btn btn-primary w-100 fw-bold">SAVE PROJECT SITE</button>
                </div>
            </form>
        </div>
    </div>
</div>