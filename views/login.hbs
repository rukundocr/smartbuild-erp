<div class="d-flex justify-content-center align-items-center" style="height: 90vh;">
    <div class="card p-5" style="width: 400px; border-top: 4px solid #0d6efd;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">SMARTBUILD</h2>
            <p class="text-secondary">Please sign in to continue</p>
        </div>
        <form action="/auth/login" method="POST">
            <div class="mb-3">
                <label class="form-label small text-secondary">Email Address</label>
                <input type="email" name="email" class="form-control form-control-lg bg-black text-white" required>
            </div>
            <div class="mb-3">
                <label class="form-label small text-secondary">Password</label>
                <input type="password" name="password" class="form-control form-control-lg bg-black text-white" required>
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold mt-3">LOGIN</button>
        </form>
        <div class="mt-4 text-center">
            <a href="/auth/register" class="text-secondary small text-decoration-none">Create an account</a>
        </div>
    </div>
</div>