<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css">

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-white fw-bold mb-0">Casual Workers</h2>
            <p class="text-secondary small">Manage personnel and daily payments with 15% WHT</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-primary fw-bold" data-bs-toggle="modal" data-bs-target="#registerWorkerModal">
                <i class="fas fa-plus me-2"></i>Register New Worker
            </button>
            <a href="/casual-workers/payments" class="btn btn-outline-info">
                <i class="fas fa-history me-2"></i>Payment History
            </a>
        </div>
    </div>

    <div class="card bg-dark border-secondary shadow-sm">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table id="workersTable" class="table table-dark table-hover border-secondary align-middle w-100">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>ID Number (NID)</th>
                            <th>Phone Number</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each workers}}
                        <tr>
                            <td>{{this.firstName}}</td>
                            <td>{{this.lastName}}</td>
                            <td><code class="text-info">{{this.idNumber}}</code></td>
                            <td>{{this.phoneNumber}}</td>
                            <td class="text-end">
                                <button class="btn btn-success btn-sm fw-bold pay-btn" 
                                        data-id="{{this._id}}" 
                                        data-name="{{this.firstName}} {{this.lastName}}">
                                    <i class="fas fa-money-bill-wave me-1"></i> PAY
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="registerWorkerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Register New Worker</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/casual-workers/register" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="text-secondary small fw-bold">FIRST NAME</label>
                        <input type="text" name="firstName" class="form-control bg-dark text-white border-secondary" required>
                    </div>
                    <div class="mb-3">
                        <label class="text-secondary small fw-bold">LAST NAME</label>
                        <input type="text" name="lastName" class="form-control bg-dark text-white border-secondary" required>
                    </div>
                    <div class="mb-3">
                        <label class="text-secondary small fw-bold">ID NUMBER (NID)</label>
                        <input type="text" name="idNumber" class="form-control bg-dark text-white border-secondary" required>
                    </div>
                    <div class="mb-3">
                        <label class="text-secondary small fw-bold">PHONE NUMBER</label>
                        <input type="text" name="phoneNumber" class="form-control bg-dark text-white border-secondary" required>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="submit" class="btn btn-primary w-100">Save Worker</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="paymentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Pay: <span id="workerNameSpan" class="text-info"></span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/casual-workers/pay" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="workerId" id="modalWorkerId">
                    
                    <div class="mb-3">
                        <label class="text-secondary small fw-bold">SELECT PROJECT</label>
                        <select name="projectId" class="form-select bg-dark text-white border-secondary" required>
                            <option value="">-- Choose Project --</option>
                            {{#each projects}}
                            <option value="{{this._id}}">{{this.projectName}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="text-secondary small fw-bold">ACTIVITY</label>
                        <input type="text" name="activity" class="form-control bg-dark text-white border-secondary" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-secondary small fw-bold">NET AMOUNT (RWF)</label>
                            <input type="number" id="netAmountInput" name="amount" class="form-control bg-dark text-info border-info fw-bold" required oninput="calculateTax()">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-secondary small fw-bold">WHT TAX (15%)</label>
                            <div id="taxDisplay" class="h4 text-warning mt-1">0 RWF</div>
                        </div>
                    </div>

                    <div class="bg-black p-3 rounded border border-secondary text-center mb-3">
                        <small class="text-secondary d-block">TOTAL EXPENSE TO COMPANY</small>
                        <h3 id="totalDisplay" class="text-white mb-0">0 RWF</h3>
                    </div>

                    <div class="mb-3">
                        <label class="text-secondary small fw-bold">PAYMENT METHOD</label>
                        <select name="paymentMethod" class="form-select bg-dark text-white border-secondary">
                            <option value="Cash">Cash</option>
                            <option value="Mobile Money">Mobile Money</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="submit" class="btn btn-success w-100">Confirm & Record Payment</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
